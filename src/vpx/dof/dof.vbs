Public Sub DOF(DOFevent, State)
    If B2SOn = True Then
        If State = 2 Then
            Controller.B2SSetData DOFevent, 1:Controller.B2SSetData DOFevent, 0
        Else
            Controller.B2SSetData DOFevent, State
        End If
    End If
End Sub

